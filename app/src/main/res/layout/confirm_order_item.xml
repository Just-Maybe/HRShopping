<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/carItemImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/headimgArrow"
            android:scaleType="center"
            app:riv_corner_radius="100dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <!--名称-->
            <TextView
                android:id="@+id/ConfirmItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="阿萨姆奶茶"
                android:textColor="@color/colorConfirmItem"
                android:textSize="15dp" />


            <!--分类-->
            <TextView
                android:id="@+id/ConfirmItemSort"
                style="@style/ConfirmItemBg"
                android:layout_below="@+id/ConfirmItemName"
                android:text="分类1"
                android:textSize="13dp" />
            <!--数量-->

            <TextView
                android:id="@+id/ConfirmItemCount"
                style="@style/ConfirmItemBg"
                android:layout_below="@id/ConfirmItemName"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/ConfirmItemSort"
                android:text="X 3" />
            <!--总价-->
            <TextView
                android:id="@+id/ConfirmItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="￥25.63"
                android:textColor="@color/colorPrimaryFont"
                android:textSize="13dp" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>