<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.WithoutActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="downMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--<style name="cardView">-->
    <!--<item name="android:foreground">?android:attr/selectableItemBackground</item>-->
    <!--<item name="android:clickable">true</item>-->
    <!--<item name="card_view:cardCornerRadius">8dp</item>-->
    <!--<item name="card_view:cardElevation">8dp</item>-->
    <!--</style>-->

    <style name="LikeCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/style_checkbox_like</item>
    </style>

    <style name="SortCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/describe_sort_selector</item>
    </style>

    <style name="CarItemCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/car_item_seletor</item>
    </style>


    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="addressTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/colorgoodsName</item>
    </style>

    <style name="addressEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/colorDescribeName</item>
        <item name="android:textColorHint">@color/colorPrimaryFont</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ShoppingToStyle">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/colorConfirmName</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="OrderBtnStyle">
        <item name="android:textColor">@color/ColortabText</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/menushow</item>
        <item name="android:windowExitAnimation">@anim/menuhide</item>
    </style>

    <style name="MyProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ConfirmItemBg">
        <item name="android:textColor">@color/colorConfirmItem</item>
        <item name="android:background">@drawable/confirm_item_bg</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <!--addressCheckboxStyle-->
    <style name="addressCheckBoxStyle" parent="Theme.AppCompat.Light">
        <item name="android:button">@drawable/address_checkbox_style</item>
    </style>

    <!--cartCheckboxStyle-->
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="android:button">@drawable/cart_checkbox_style</item>
    </style>

    <style name="RatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_bg</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
    </style>

    <style name="commtentRatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/comment_star_bg</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>
</resources>
